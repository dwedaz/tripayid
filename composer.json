{
    "name": "dwedaz/tripayid",
    "description": "Laravel package for integrating Tripay.id PPOB (Payment Point Online Bank) services - supports both prepaid and postpaid transactions",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "tripay", "ppob", "payment", "prepaid", "postpaid", "indonesia", "pulsa", "tagihan"],
    "authors": [
        {
            "name": "dwedaz",
            "email": "dwedaz@example.com",
            "homepage": "https://github.com/dwedaz"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/cache": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "pestphp/pest": "^2.0",
        "orchestra/testbench": "^8.0|^9.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "backpack/crud": "^6.0",
        "mockery/mockery": "^1.0"
    },
    "suggest": {
        "backpack/crud": "For admin panel integration and CRUD interfaces"
    },
    "autoload": {
        "psr-4": {
            "Tripay\\PPOB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tripay\\PPOB\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tripay\\PPOB\\TripayServiceProvider"
            ],
            "aliases": {
                "Tripay": "Tripay\\PPOB\\Facades\\Tripay"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
